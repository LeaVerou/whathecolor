{
  "name": "whathecolor",
  "version": "2.0.0-alpha.1",
  "description": "A color guessing game for CSS developers",
  "main": "whathecolor.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx postcss \"**/*.postcss\" --base . --dir . --ext .css --config postcss.config.cjs",
